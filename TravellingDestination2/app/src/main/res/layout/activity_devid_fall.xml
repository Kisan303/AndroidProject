<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DevidFall">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amiko"
        android:text="Related DevidFall"
        android:textColor="#ABB2B9 "
        android:textSize="20dp"

        />
    <!--    *********HOME LOGO *************-->
    <ImageView
        android:onClick="tohome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logo"
        android:layout_marginLeft="310dp"

        />


    <com.denzcoskun.imageslider.ImageSlider
        android:layout_width="338dp"
        android:layout_height="224dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="60dp"
        app:auto_cycle="false"
        app:delay="0"
        android:id="@+id/slider"
        app:period="1000"

        />

    <!--    ************************************************-->

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="280dp"
        android:numStars="5"
        android:scaleX=".6"
        android:scaleY=".6"
        android:stepSize="0.5" />



    <ImageView
        android:layout_width="23dp"
        android:layout_height="24dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="294dp"
        android:onClick="devidfallmap"
        android:src="@drawable/mapicon"

        />

    <TextView
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/homepageboxtwo"

        />





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="360dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"

                android:text="About DevidFall"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="308dp"
                android:layout_height="130dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans"
                android:justificationMode="inter_word"
                android:text="@string/aboutdevidfall" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="158dp"

                android:text="Highlights"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="305dp"
                android:layout_height="220dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="185dp"
                android:fontFamily="@font/noto_sans"
                android:justificationMode="inter_word"
                android:text="@string/devidfallhighlite"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="390dp"
                android:text="Location"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="305dp"
                android:layout_height="30dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="417dp"
                android:fontFamily="@font/noto_sans"
                android:justificationMode="inter_word"
                android:text="Pokhara, DevidFall Cave"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="446dp"

                android:text="Entery Fee"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="305dp"
                android:layout_height="60dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="469dp"
                android:fontFamily="@font/noto_sans"
                android:justificationMode="inter_word"
                android:text=" Required ticket for entrance"
                />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>