<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardUser">


    <TextView
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:text="User Profile Dashboard"
        android:textSize="20sp"
        android:layout_marginTop="10dp"

        />

<!--   **************** App LOGO ****************** -->

    <ImageView
        android:onClick="tohome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo"
        android:layout_marginLeft="310dp"

        />



    <TextView
        android:layout_width="330dp"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dashboardbox"

        />


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profileImage"
        android:layout_width="169dp"
        android:layout_height="146dp"
       android:layout_marginTop="70dp"
        android:layout_marginLeft="95dp"
        android:src="@drawable/profileimg"
        android:elevation="10dp"
        />

    <ProgressBar
        android:id="@+id/simpleProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="130dp"
        android:layout_marginLeft="160dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/changeProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/upload"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="70dp"
        />

    <TextView
        android:id="@+id/verifyMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="235dp"
        android:text="*****Email is not verify*****"
        android:textColor="#E74C3C"
        android:textSize="20sp"
        android:visibility="gone" />

<!-- ************ USER INFO **************************************   -->

    <TextView

        android:id="@+id/YourName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="280dp"
        android:text="user enter name"
        android:layout_marginLeft="140dp"
        android:textSize="15sp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="90dp"
        android:fontFamily="serif"
        android:text="Name:"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/YourEmail"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="140dp"
        android:text="user enter email"
        android:textSize="15sp" />

    <TextView


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="90dp"
        android:fontFamily="serif"
        android:text="Email:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/YourPhone"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="140dp"
        android:text="user enter phone number"
        android:textSize="15sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="88dp"
        android:fontFamily="serif"
        android:text="Phone:"
        android:textSize="15sp"
        android:textStyle="bold" />


<!-- ********** ENF OD THE USER INFO ***************************   -->


    <Button
        android:id="@+id/resendCode"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="120dp"
        android:text="Verify Email"
        android:textColor="#EAECEE "
        android:background="@drawable/dashboardbtn"
        android:visibility="gone" />

    <Button
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="120dp"
        android:textColor="#EAECEE "
        android:onClick="logout"
        android:background="@drawable/dashboardbtn"
        android:text="LogOut" />


    <TextView
        android:id="@+id/restPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="510dp"
        android:text="Reset Password"
        android:textStyle="bold"
        android:textColor="#E74C3C"
        android:textSize="13dp" />


</RelativeLayout>